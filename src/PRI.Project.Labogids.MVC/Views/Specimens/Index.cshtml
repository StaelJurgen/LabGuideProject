<div id="app">
    <h1>{{pageTitle}}</h1>
    <div class="float-right">
        <button type="button" class="btn text-white" v-on:click="addSpecimen" style="background-color:rgb(149,199,61)">Nieuw monster aanmaken</button>
    </div>
    <div class="form-group">
        <ul class="list-unstyled">
            <li v-for="specimen in specimens" v-bind:id="specimen.id">
                <a v-bind:href="'https://localhost:5001/Specimens/Details/' + specimen.id" 
                   v-on:click="addSpecIdToLocalStorage(specimen.id)"
                   class="text-white">{{specimen.name}}</a>
            </li>
        </ul>
    </div>
</div>
<script src="~/js/Specimens/index.js"></script>